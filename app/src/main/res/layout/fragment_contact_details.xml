<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".contacts.ContactDetailsFragment">

    <TextView
            android:id="@+id/textViewDesignation"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_font"
            tools:text="Election Commissioner"
            android:background="@color/black1"
            android:padding="16dp"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/textViewName"
                    tools:text="Mr. Sunil Arora"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto_font"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/textViewOfficePhone"
                    tools:text="Phone (0) : 7478870112"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawableStart="@drawable/ic_call_black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_font"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/textViewOfficeFax"
                    tools:text="Fax (0) : 7478870112"
                    android:drawableLeft="@drawable/ic_fax"
                    android:drawableStart="@drawable/ic_fax"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_font"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/textViewEmail"
                    tools:text="Email : gmonetix@gmail.com"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_font"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/textViewPhone"
                    tools:text="Phone (P) : 7478870112"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawableStart="@drawable/ic_call_black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_font"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>