<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sveep.vfeed.VFeedParticipateFragment">

    <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_font"
            android:text="@string/participate_now"
            android:background="@color/black1"
            android:padding="16dp"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/full_name">

                    <com.google.android.material.textfield.TextInputEditText
                            android:inputType="textPersonName"
                            android:fontFamily="@font/roboto_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                        android:id="@+id/imageView"
                        tools:src="@drawable/placeholder"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpload"
                        android:text="@string/upload_image"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:fontFamily="@font/montserrat_font"
                        android:textStyle="bold"
                        app:iconPadding="4dp"
                        android:gravity="center"
                        app:icon="@drawable/ic_plus"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewContent"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddContent"
                        android:text="@string/addcontent"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:fontFamily="@font/montserrat_font"
                        android:textStyle="bold"
                        app:iconPadding="4dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        app:icon="@drawable/ic_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:text="@string/submit_now"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"
                        android:fontFamily="@font/montserrat_font"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>