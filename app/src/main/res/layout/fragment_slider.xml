<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".slides.SliderFragment">

    <TextView
            android:id="@+id/textViewTitle"
            tools:text="Get ECI updates at the palm of your hands!"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_font"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/slide1"
            android:adjustViewBounds="true"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewDesc"/>

    <TextView
            android:id="@+id/textViewDesc"
            tools:text="Get updates from Election Commission of India served at the palm of your hands."
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_font"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>