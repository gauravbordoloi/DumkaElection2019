<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".events.EventDetailsFragment">

    <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_font"
            android:text="@string/event_details"
            android:background="@color/black1"
            android:padding="16dp"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/textViewTitle"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_font"
                        tools:text="Hackathon Challenge"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewTime"
                        tools:text="Start Time : 09 Apr 2019 05 PM"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewLink"
                        tools:text="https://gauravbordoloi.me"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewDescription"
                        tools:text="One of the fundamental concepts in this library is that of tileSize. Even if you don't set one explicitly, one is calculated and is used in sizing the view."
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/roboto_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewInterested"
                        android:text="You and 568 people are interested"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNotInterested"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:text="@string/not_interested"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_dislike"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_font"
                            android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnInterested"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            android:text="@string/interested"
                            android:fontFamily="@font/roboto_font"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_like"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>